{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext", "DOM"], 
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noEmit": true
    },
    "include": [
      "src/**/*.js",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }  
